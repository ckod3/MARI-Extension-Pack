<Node>
    <ID>JK_RegionSplitter_Metal</ID>
    <DefaultName>Region Value Selector (MetalRough)</DefaultName>
    <Category>Material Regions/Metal-Rough/</Category>
    <Inputs>
        <Input Name="IN_A" PrettyName="Input A"/>
        <Input Name="IN_B" PrettyName="Input B"/>
        <Input Name="IN_C" PrettyName="Input C"/>
    </Inputs>
    <Attributes>
    <Attribute Name="Value" PrettyName="Region Value" Group="" Type="stringlist">Please Select,Please Select,Base Color (RGBA),Roughness (Float),Metal (Float),Height (Float),Normal (RGBA)</Attribute>
    <Attribute Name="Aclamp" PrettyName="Clamp Attribute Output" Type="bool" Min="false" Max="true">false</Attribute>

    </Attributes>

 <Contexts>
        <Context Type="NodeGraphView">
            <Inputs>
                <Input Name="IN_A"><Pos>-170,-40</Pos></Input>
                <Input Name="IN_B"><Pos>-170,-20</Pos></Input>
                <Input Name="IN_C"><Pos>-170,20</Pos></Input>
            </Inputs>

            <Outputs>
                <Output Name="Output"><Pos>200,0</Pos></Output>
            </Outputs>
        </Context>
        <Context Type="GLSL">
            <Shader ShaderType='Fragment'>
                <Inputs>
                <Input Name="IN_A"><Default>vec4(1.0)</Default></Input>
                <Input Name="IN_B"><Default>vec4(1.0)</Default></Input>
                <Input Name="IN_C"><Default>vec4(1.0)</Default></Input>
                </Inputs>

            </Shader>
            <Shader>
                <Body><![CDATA[



            vec4 result;
            float clampMixer = float($Aclamp);
            vec4 one = vec4(1.0);
            vec4 zero = vec4(0.0);

            if($Value==0) // Nothing selected
            {
              result = vec4(0.0);
            }
            else if($Value==1) // Base Color
            {
              result = mix(#IN_A,clamp(#IN_A,zero,one),clampMixer);
            }
            else if($Value==2) // Roughness
            {
              result = vec4(#IN_B.r,#IN_B.r,#IN_B.r,1.0);
              result = mix(result,clamp(result,zero,one),clampMixer);
            }
            else if($Value==3) // Metal
            {
              result = vec4(#IN_B.g,#IN_B.g,#IN_B.g,1.0);
              result = mix(result,clamp(result,zero,one),clampMixer);
            }

            else if($Value==4) // DIsplacement
            {
              result = vec4(#IN_B.b,#IN_B.b,#IN_B.b,1.0);
              result = mix(result,clamp(result,zero,one),clampMixer);
            }
            else if($Value==5) //Normal
            {
              result = #IN_C;
              result = mix(result,clamp(result,zero,one),clampMixer);
            }

            Output = result;


                ]]></Body>
            </Shader>
        </Context>
    </Contexts>
</Node>

