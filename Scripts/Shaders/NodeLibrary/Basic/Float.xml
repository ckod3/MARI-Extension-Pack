<Node>
  <ID>JK_Float</ID>
  <DefaultName>Float</DefaultName>
  <Category>Basic/</Category>
  <Cost>0.001</Cost>
    <Attributes>
        <Attribute Name="value" PrettyName="Float Value" Group="" Type="float" >0.5</Attribute>
    </Attributes>
    <Contexts>
        <Context Type="GLSL">
        <Shader>
           <Body><![CDATA[
                Output = vec4($value,$value,$value,1.0);
           ]]>
           </Body>
        </Shader>
      </Context>
  </Contexts>
</Node>

